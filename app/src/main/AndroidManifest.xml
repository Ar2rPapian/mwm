<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.leet.monolith">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme">


        <activity android:name=".view.activities.LaunchActivity"/>
        <activity android:name=".view.activities.SignInActivity"/>
        <activity android:name=".view.activities.SignUpActivity"/>
        <activity android:name=".view.activities.MainActivity"/>

        <activity
                android:name=".view.activities.SplashActivity"
                android:screenOrientation="portrait">
            <intent-filter  android:autoVerify="true">
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.LAUNCHER" />
                <category android:name="android.intent.category.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.BaseActivity"/>
    </application>

</manifest>